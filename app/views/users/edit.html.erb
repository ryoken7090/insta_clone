<h1>ユーザ編集</h1>
<%= form_with(model: @user, local: true) do |f| %>
<% if @user.errors.any? %>
  <div class= "error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "変更を登録" %>
<% end %>
