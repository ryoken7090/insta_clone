<%= form_with(model: @story, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @story.errors.any? %>
    <div class= "error_explanation">
      <h2><%= @story.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="story_form center-block">
    <div class="form-groups">
      <div class="form-group">
        <%=  form.label :image %>
        <i class="far fa-image fa-lg"></i>
        <%=  form.file_field :image, class: "image_up"%>
      </div>
      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_field :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit %>
      </div>
    </div>
  </div>
<% end %>
