<%= form_with(model: @story, local: true, url: choose_new_or_edit ) do |form| %>
<% if @story.errors.any? %>
  <div class= "error_explanation">
    <h2><%= @story.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="story_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%=  form.label :image %>
    <%=  form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>
