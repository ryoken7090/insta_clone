<h3>詳細画面</h3>
content: <%= @story.content %>
<% if @story.image.present? %>
  <%= image_tag(@story.image.url) %>
<% end %>
<% if @story.user_id == current_user.id %>
  <%= link_to '編集', edit_story_path(@story.id) %>
  <%= link_to '削除', story_path, method: :delete, data: { confirm: '削除してよろしいですか？'} %>
<% end %>
<% if @favorite.present? %>
  <%= link_to 'お気に入りを解除', favorite_path(id: @favorite.id), method: :delete %>
<% else %>
  <%= link_to 'お気に入りに登録', favorites_path(story_id: @story.id), method: :post %>
<% end %>
